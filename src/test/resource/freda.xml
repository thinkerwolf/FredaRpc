<?xml version="1.0" encoding="UTF-8"?>
<!-- property 只支持基本数据类型和字符串 -->
<configuration>
	<!-- netty server 配置 -->
	<netty-server>
		<property name="bossThreads">2</property>
		<property name="workerThreads">8</property>
		<property name="ip">127.0.0.1</property>
		<property name="port">8888</property>
		<property name="protocal">freda</property>
	</netty-server>

	<!-- netty client 配置 -->
	<netty-client>
		<property name="bossThreads">2</property>
		<property name="workerThreads">8</property>
		<property name="ip">127.0.0.1</property>
		<property name="port">8888</property>
		<property name="protocal">freda</property>
	</netty-client>

	<!-- 注册中心 zookeeper -->
	<registry>
		<property name="ip">127.0.0.1</property>
		<property name="port">2121</property>
		<property name="type">zookeeper</property>
	</registry>

	<!-- 需要暴漏的接口 -->
	<services>
		<service id="demoService" interface="com.freda.example.DemoService" class="com.freda.example.DemoServiceImpl">
			<property name="persent">100</property>
			<property name="server">true</property>
			<property name="hello">Hello,sam</property>
		</service>
	</services>
	
	<!--  -->
	<references>
		<reference id="demoService1" interface="com.freda.example.DemoService"></reference>
	</references>
	
	<!-- 注解扫描 service -->
	<compoent-scan basePackage="com.freda" />

</configuration>

